{
  "compilerOptions": {
    "target": "es2018",                                  
    "lib": ["es2018", "esnext.AsyncIterable"],                                       
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,                    
    
    "module": "commonjs",                                         
    "outDir": "./dist",                                   
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,           
    "strict": true,                                      
    "strictPropertyInitialization": false,             
    "skipLibCheck": true,            
    "resolveJsonModule": true                    
  }
}